# ============================================
# CONFIGURAÇÃO DE AMBIENTE - STAGING
# ============================================
# Copie este arquivo para .env.staging e ajuste os valores

# Nome do Cliente (usado nos relatórios)
NOME_CLIENTE=STAGING

# ============================================
# HOST DOS BANCOS (mesmo servidor para todos)
# ============================================
DB_HOST=localhost

# ============================================
# BANCO GESTÃO (gestao-usuarios-api)
# ============================================
DB_GESTAO_NAME=gestao_usuarios
DB_GESTAO_USER=postgres
DB_GESTAO_PASS=senha_gestao

# ============================================
# BANCO CONTRATO (contrato-api)
# ============================================
DB_CONTRATO_NAME=contrato
DB_CONTRATO_USER=postgres
DB_CONTRATO_PASS=senha_contrato

# ============================================
# BANCO PESSOA (pessoa-api)
# ============================================
DB_PESSOA_NAME=pessoa
DB_PESSOA_USER=postgres
DB_PESSOA_PASS=senha_pessoa

# ============================================
# BANCO ACCOUNTS (acesso via dblink)
# ============================================
URL_ACCOUNTS=db-staging.exemplo.com
DB_ACCOUNTS_NAME_USER=accounts
DB_ACCOUNTS_PASS=senha_accounts

# ============================================
# CONFIGURAÇÃO SSH (Túnel para os bancos)
# ============================================
# Servidor SSH para criar o túnel
SSH_HOST=bastion.exemplo.com
SSH_USER=usuario_ssh
SSH_PORT=22

# Autenticação SSH (use apenas uma das opções)
# Opção 1: Chave privada (RECOMENDADO - mais seguro)
SSH_PKEY_PATH=/home/usuario/.ssh/id_rsa

# Opção 2: Senha (não recomendado para produção)
# SSH_PASSWORD=senha_ssh

# Configuração do túnel
SSH_REMOTE_DB_HOST=localhost
SSH_REMOTE_DB_PORT=5432
SSH_LOCAL_PORT=5435

# ============================================
# CONFIGURAÇÕES DO SCRIPT
# ============================================
# Limite de registros a processar (0 = todos)
# 
# LIMITE_REGISTROS=1   → MODO DEBUG (análise detalhada, perfeito para validar)
# LIMITE_REGISTROS=10  → Teste com batch pequeno
# LIMITE_REGISTROS=0   → Processar TODOS os registros
LIMITE_REGISTROS=1

